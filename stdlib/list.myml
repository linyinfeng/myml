import "fix.myml" ;;
import "integer.myml" ;;

listNil = `nil unit ;;

listCons x xs = `cons { head = x, tail = xs } ;;

listSingleton x = listCons x listNil ;;

rec listLength =
  [ `nil _ = 0
  , `cons l = integerPlus 1 (listLength l.tail) ] ;;

rec list++ =
  [ `nil _ = \ ys . ys
  , `cons l = \ ys . listCons l.head (list++ l.tail ys) ] ;;

rec listMap f =
  [ `nil _ = listNil
  , `cons l = listCons (f l.head) (listMap f l.tail) ] ;;
